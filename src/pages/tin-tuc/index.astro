---
import NewLayout from "../../layouts/NewLayout.astro";
import Hero from "../../components/organisms/news/Hero.astro";
---

<NewLayout title="Bình Phát - Tin tức">
  <Hero />

  <div class="container mb-10">
    {
      [1, 2, 3, 4, 5].map((item) => (
        <div class="mt-10">
          <figure>
            <div
              class="media"
              style="background-image: url(https://s3-us-west-2.amazonaws.com/s.cdpn.io/584938/bg_15.png)"
            />
            <>
              <figcaption>
                <svg
                  viewBox="0 0 200 200"
                  version="1.1"
                  preserveAspectRatio="none"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <defs>
                    <mask id="mask" x="0" y="0" width="100%" height="100%">
                      <>
                        <rect
                          id="alpha"
                          x="0"
                          y="0"
                          width="100%"
                          height="100%"
                        />
                        <text class="title" dx="50%" dy="2.5em">
                          BÌNH
                        </text>
                      </>
                      <text class="title" dx="50%" dy="3.5em">
                        PHÁT
                      </text>
                    </mask>
                  </defs>
                  <rect id="base" x="0" y="0" width="100%" height="100%" />
                </svg>
                <div class="content">
                  <p>
                    BÌNH PHÁT KHAI GIẢNG KHÓA HỌC VỀ TRÍ TUỆ NHÂN TẠO, TĂNG TỐC
                    CHUYỂN ĐỔI SỐ
                  </p>
                </div>
              </figcaption>
              <a href="/tin-tuc/binh-phat-khai-giang-khoa-hoc-vu-tri-tu-nhan-tao" />
            </>
          </figure>
        </div>
      ))
    }
  </div>
</NewLayout>

<style>
  .container-fluid {
    width: 100%;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-gap: 20px;
  }
  .media {
    background-position: center;
    background-size: cover;
    height: 100%;
    position: absolute;
    transition: all 0.3s ease;
    width: 100%;
  }
  figure {
    height: 370px;
    overflow: hidden;
    position: relative;
  }
  figure a {
    height: 100%;
    left: 0;
    position: absolute;
    top: 0;
    width: 100%;
    z-index: 3;
  }
  figure:hover .media {
    transform: scale(1.25);
  }
  figcaption {
    color: #252830;
    height: calc(100% - 30px);
    margin: 15px;
    left: 0;
    position: absolute;
    top: 0;
    width: 250px;
  }
  .content {
    background-color: white;
    bottom: 0;
    position: absolute;
    width: 100%;
  }

  .content p {
    padding: 15px;
  }

  svg {
    height: inherit;
    width: 100%;
  }
  svg text {
    text-anchor: middle;
  }
  svg #alpha {
    fill: white;
  }
  svg .title {
    font-size: 28px;
    font-family: "Montserrat";
    letter-spacing: 5px;
  }
  svg #base {
    fill: white;
    -webkit-mask: url(#mask);
    mask: url(#mask);
  }

  @media screen and (min-width: 2400px) {
    .content p {
      font-size: 20px;
    }
  }
</style>
