  { start: 2222, end: 3070 },
  { start: 4008, end: 5464 },
  { start: 7143, end: 10000 },
];
---

<Layout
  title="Hamanako - Les Quatre Saisons - Auberge"
  colorRanges={colorRanges}
>
  <div class="overflow-hidden">
    <HeroSection images={heroImages} />

    <AboutSection
      description={aboutSection.description}
      title={aboutSection.title}
      subtitle={aboutSection.subtitle}
      content={aboutSection.content}
      backgroundImage={aboutSection.backgroundImage}
    />

    <IntroductionSection
      title={signatureFoodSection.title}
      content={signatureFoodSection.content}
      imageSrc={signatureFoodSection.imageSrc}
      reverse={signatureFoodSection.reverse}
      sectionClass="lg:pt-[38px] pb-[100px] lg:pb-[107px]"
      contentClass="pt-0"
      menuColor="black"
    />

    <section class="about-third" data-menu-color="white">
      <img
        src="/images/homepage/about-third.webp"
        alt=""
        class="block w-screen max-h-[895px] object-cover"
      />
    </section>

    <FeatureSection
      index={sections[0].index}
      label={sections[0].label}
      title={sections[0].title}
      subtitle={sections[0].subtitle}
      content={sections[0].content}
      imageSrc={sections[0].imageSrc}
      link={sections[0].link}
      reverse={sections[0].reverse}
      changeColor={sections[0].changeColor}
      sectionClass="pt-[50px] lg:pt-[110px] pb-[100px] lg:pb-[50px]"
      menuColor="black"
    />

    <FeatureSection
      index={sections[1].index}
      label={sections[1].label}
      title={sections[1].title}
      subtitle={sections[1].subtitle}
      content={sections[1].content}
      imageSrc={sections[1].imageSrc}
      link={sections[1].link}
      reverse={sections[1].reverse}
      changeColor={sections[1].changeColor}
      sectionClass="pb-[100px] lg:pb-[50px]"
      menuColor="black"
    />

    <FeatureSection
      index={sections[2].index}
      label={sections[2].label}
      title={sections[2].title}
      subtitle={sections[2].subtitle}
      content={sections[2].content}
      imageSrc={sections[2].imageSrc}
      link={sections[2].link}
      reverse={sections[2].reverse}
      changeColor={sections[2].changeColor}
    />

    <ThreePanelSection panels={panels} />

    <NewsSection
      title="news"
      subtitle="お知らせ"
      newsItems={newsItems}
      readMoreHref="/news"
      menuColor="black"
    />
  </div>
</Layout>

<script>
  import { initScrollAnimations } from "../scripts/gsap-scroll.js";

  const runInit = () => {
    if ("requestIdleCallback" in window) {
      requestIdleCallback(initScrollAnimations, { timeout: 500 });
    } else {
      setTimeout(initScrollAnimations, 200);
    }
  };

  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", runInit);
  } else {
    runInit();
  }
</script>
