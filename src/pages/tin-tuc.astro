---
import image01 from "../assets/images/01.webp";
---

<div
  class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto"
>
  <div
    class="group relative overflow-hidden cursor-pointer animate-diagonal-slide"
  >
    {/* Morphing background shape */}
    <div
      class="absolute inset-0 bg-gradient-to-br from-blue-600 via-blue-500 to-blue-700 opacity-10 animate-morph -z-10"
    >
    </div>

    {/* Main card with asymmetric design */}
    <div
      class="relative bg-card border-2 border-transparent hover:border-blue-500/30 transition-all duration-700 animate-pulse-glow hover:animate-pulse-glow rounded-2xl overflow-hidden"
    >
      {/* Diagonal cut design */}
      <div
        class="relative overflow-hidden"
        style={{
          clipPath: "polygon(0 0, 85% 0, 100% 20%, 100% 100%, 15% 100%, 0 80%)",
        }}
      >
        <div
          class="h-64 bg-gradient-to-br from-blue-700 via-blue-600 to-blue-800 relative overflow-hidden"
        >
          <img
            src={image01.src}
            alt="test"
            class="w-full h-full object-cover opacity-60 group-hover:opacity-80 group-hover:scale-110 transition-all duration-1000 ease-out"
          />

          {/* Floating geometric elements */}
          <div
            class="absolute top-4 right-8 w-12 h-12 bg-blue-500/50 rotate-45 animate-float"
          >
          </div>
          <div
            class="absolute bottom-8 left-4 w-8 h-8 bg-blue-400/60 rounded-full animate-float"
            style={{ animationDelay: "1s" }}
          >
          </div>
          <div
            class="absolute top-1/2 right-4 w-6 h-16 bg-blue-300/40 transform -rotate-12 animate-float"
            style={{ animationDelay: "2s" }}
          >
          </div>
        </div>
      </div>

      <div class="relative -mt-12 mx-6 mb-6">
        {/* Increased border radius from rounded-xl to rounded-2xl */}
        <div
          class="bg-card/95 backdrop-blur-sm border border-blue-500/20 rounded-2xl p-6 shadow-lg group-hover:shadow-xl transition-all duration-500"
        >
          <div class="flex items-start gap-4">
            {/* Stylized date display */}
            <div
              class="text-center group-hover:scale-110 transition-transform duration-300"
            >
              <div
                class="text-xs text-muted-foreground font-medium mb-1 tracking-wider"
              >
                08/2025
              </div>
              <div
                class="text-4xl font-black text-blue-600 leading-none relative"
              >
                20
                <div
                  class="absolute -top-1 -right-1 w-2 h-2 bg-blue-500 rounded-full animate-pulse"
                >
                </div>
              </div>
            </div>

            {/* Title */}
            <div class="flex-1">
              <h3
                class="font-bold text-foreground text-xl md:text-2xl leading-tight group-hover:text-blue-600 transition-colors duration-300"
              >
                test
              </h3>
            </div>
          </div>
        </div>
      </div>

      {/* Decorative corner accent */}
      <div
        class="absolute top-0 right-0 w-16 h-16 bg-gradient-to-bl from-blue-500/30 to-transparent"
        style={{ clipPath: "polygon(100% 0, 100% 100%, 0 0)" }}
      >
      </div>
    </div>
  </div>
