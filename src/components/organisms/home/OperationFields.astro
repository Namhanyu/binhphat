---
import { getLangFromUrl, useTranslations } from "../../../i18n/utils";
import ActionButton from "../../molecules/ActionButton.astro";
import image01 from "../../../assets/images/01.webp";
import image02 from "../../../assets/images/02.webp";
import LongArrow from "../../atoms/LongArrow.astro";
import clsx from "clsx";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section
  id="operations"
  class="min-h-screen pt-20 pb-10 flex items-center"
  data-menu-color="primary"
  data-number="4"
>
  <div class="container mx-auto flex gap-12 xl:gap-19 max-md:flex-col">
    <div class="flex-1 lg:max-w-[410px]">
      <div
        class="text-5xl max-md:text-3xl font-extrabold uppercase text-primary mb-4"
      >
        {t("operations.title")}
      </div>
      <div
        class="text-3xl max-md:text-2xl font-bold text-primary mb-3 uppercase"
      >
        {t("operations.subtitle")}
      </div>
      <div class="text-justify mb-7">
        {t("operations.content")}
      </div>
      <ActionButton
        class="bg-primary border-primary text-white w-full max-md:w-auto"
      >
        {t("operations.view_more")}
      </ActionButton>
    </div>
    <div class="flex-1 flex gap-4 max-lg:flex-col">
      <div
        class={clsx(
          "group px-10 py-8 flex items-end relative overflow-hidden flex-1",
          "after:absolute after:bottom-0 after:left-0 after:right-0 after:h-1/3 after:pointer-events-none after:bg-gradient-to-t after:from-black after:to-black/0",
          "max-md:min-h-[280px]"
        )}
      >
        <div
          class="absolute inset-0 bg-cover bg-center group-hover:scale-110 transition-transform duration-500"
          style={`background-image: url(${image01.src});`}
        >
        </div>
        <div class="flex items-end gap-3 relative z-10">
          <div class="text-2xl xl:text-3xl font-semibold text-white uppercase">
            {t("operations.construction")}
          </div>
          <LongArrow class="shrink-0 mb-2" />
        </div>
      </div>

      <div
        class={clsx(
          "group px-10 py-8 flex items-end relative overflow-hidden flex-1",
          "after:absolute after:bottom-0 after:left-0 after:right-0 after:h-1/3 after:pointer-events-none after:bg-gradient-to-t after:from-black after:to-black/0",
          "max-md:min-h-[280px]"
        )}
      >
        <div
          class="absolute inset-0 bg-cover bg-center group-hover:scale-110 transition-transform duration-500"
          style={`background-image: url(${image02.src});`}
        >
        </div>
        <div class="flex items-end gap-3 relative z-10">
          <div class="text-2xl xl:text-3xl font-semibold text-white uppercase">
            {t("operations.electromechanical")}
          </div>
          <LongArrow class="shrink-0 mb-2" />
        </div>
      </div>
    </div>
  </div>
</section>
