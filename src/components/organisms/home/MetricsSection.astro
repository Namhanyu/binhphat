---
import { getLangFromUrl, useTranslations } from "../../../i18n/utils";
import bgImage from "../../../assets/images/04.webp";
import clsx from "clsx";
import DoubleQuote from "../../atoms/DoubleQuote.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section
  id="metrics"
  class={clsx(
    "bg-primary h-screen flex items-center text-white bg-cover bg-right-bottom bg-no-repeat pb-10 pt-20",
    "3xl:pb-[2.5vw] 3xl:pt-[5vw]",
    "max-xl:bg-left-bottom max-md:h-auto"
  )}
  style={`background-image: url(${bgImage.src});`}
  data-menu-color="white"
>
  <div class="container">
    <div class="max-w-[512px] 3xl:max-w-[32vw]">
      <div class="flex gap-1 mb-6 max-md:mb-4 3xl:gap-[0.25vw] 3xl:mb-[1.5vw]">
        <DoubleQuote
          class="fill-white opacity-25 w-auto max-md:h-10 3xl:h-[4.375vw]"
        />
      </div>
      <h3
        class="text-4xl mb-24 3xl:mb-[6vw] font-bold uppercase max-md:text-3xl max-md:mb-16"
      >
        {t("metrics.title")}
      </h3>
      <div
        class="grid grid-cols-[auto_1fr] gap-14 3xl:gap-[3.5vw] max-md:gap-10"
      >
        <div class="group grid gap-4 3xl:gap-[1vw] max-md:gap-2">
          <div
            class="font-bold text-[72px] 3xl:text-[4.375vw] leading-[52px] 3xl:leading-[3.25vw] max-md:text-4xl"
          >
            +100
          </div>
          <div class="uppercase pl-[46px] 3xl:pl-[2.875vw] max-md:pl-6">
            {t("metrics.employees")}
          </div>
        </div>
        <div class="group grid gap-4 3xl:gap-[1vw] max-md:gap-2">
          <div
            class="font-bold text-[72px] 3xl:text-[4.375vw] leading-[52px] 3xl:leading-[3.25vw] max-md:text-4xl"
          >
            +10
          </div>
          <div class="uppercase pl-[46px] 3xl:pl-[2.875vw] max-md:pl-6">
            {t("metrics.years")}
          </div>
        </div>
        <div class="group grid gap-4 3xl:gap-[1vw] max-md:gap-2 content-start">
          <div
            class="font-bold text-[72px] 3xl:text-[4.375vw] leading-[52px] 3xl:leading-[3.25vw] max-md:text-4xl"
          >
            +100
          </div>
          <div class="uppercase pl-[46px] 3xl:pl-[2.875vw] max-md:pl-6">
            {t("metrics.projects")}
          </div>
        </div>
        <div class="group grid gap-4 3xl:gap-[1vw] max-md:gap-2">
          <div
            class="font-bold text-[72px] 3xl:text-[4.375vw] leading-[52px] 3xl:leading-[3.25vw] max-md:text-4xl"
          >
            +80
          </div>
          <div class="uppercase pl-[46px] 3xl:pl-[2.875vw] max-md:pl-6">
            {t("metrics.billion")}<br />
            <span class="text-sm">{t("metrics.note")}</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
