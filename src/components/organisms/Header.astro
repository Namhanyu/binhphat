---
import clsx from "clsx";
import MenuButton from "../molecules/MenuButton";
import PageLogo from "../molecules/PageLogo.astro";
import SlidingMenu from "../molecules/SlidingMenu.astro";
import LangSelector from "../molecules/LangSelector.astro";
import ScrollPagination from "../molecules/ScrollPagination.astro";
---

<header
  id="header"
  class={clsx(
    "fixed top-0 left-0 right-0 z-50 flex items-center justify-between text-white",
    "h-20 xl:h-32 max-md:h-16 xl:px-24 px-10 max-md:px-6",
    "3xl:h-[5vw] 3xl:px-[6vw]",
    "before:absolute before:top-0 before:left-0 before:right-0 before:h-full before:pointer-events-none before:bg-gradient-to-b before:from-primary before:to-primary/0"
  )}
>
  <LangSelector />

  <PageLogo />

  <MenuButton client:load />

  <SlidingMenu />

  <ScrollPagination />
</header>
