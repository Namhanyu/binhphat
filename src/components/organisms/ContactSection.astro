---
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
import ActionButton from "../molecules/ActionButton.astro";
import bgImage from "../../assets/images/contact.webp";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section
  id="contact"
  class="flex items-center md:min-h-screen max-md:py-20 md:pt-10 bg-cover bg-top"
  data-menu-color="primary"
  style={`background-image: url(${bgImage.src});`}
>
  <div class="container mx-auto">
    <div class="max-w-[600px] 3xl:max-w-[37.5vw]">
      <h2
        class="text-5xl max-md:text-3xl uppercase font-black text-primary mb-8 3xl:mb-[2vw]"
        data-animate
        data-y="50"
      >
        {t("contact.title")}
      </h2>

      <!-- Company Information -->
      <div class="text-left space-y-3 3xl:space-y-[0.75vw]">
        <div data-animate data-x="-50">
          <h3 class="uppercase font-bold text-primary">
            {t("contact.headquarters")}
          </h3>
          <div>{t("contact.headquarters.address")}</div>
        </div>

        <div data-animate data-x="-50">
          <h3 class="uppercase font-bold text-primary">
            {t("contact.offices")}
          </h3>
          <div class="space-y-1 3xl:space-y-[0.25vw]">
            {t("contact.offices.hanoi")}<br />
            {t("contact.offices.hcm")}
          </div>
        </div>

        <div data-animate data-x="-50">
          {t("contact.phone.email")}
        </div>

        <div data-animate data-x="-50">
          <h3 class="uppercase font-bold text-primary mb-2 3xl:mb-[0.5vw]">
            {t("contact.form.title")}
          </h3>

          <form class="grid gap-1 3xl:gap-[0.25vw]">
            <!-- Name Input -->
            <div>
              <input
                type="text"
                placeholder={t("contact.form.name")}
                class="input"
              />
            </div>

            <!-- Phone Input -->
            <div>
              <input
                type="tel"
                placeholder={t("contact.form.phone")}
                class="input"
              />
            </div>

            <!-- Email Input -->
            <div>
              <input
                type="email"
                placeholder={t("contact.form.email")}
                class="input"
              />
            </div>

            <!-- Address Input -->
            <div>
              <input
                type="text"
                placeholder={t("contact.form.address")}
                class="input"
              />
            </div>

            <!-- Message Textarea -->
            <div>
              <textarea
                placeholder={t("contact.form.message")}
                rows="5"
                class="input resize-none !h-auto"></textarea>
            </div>

            <ActionButton class="w-full bg-primary text-white !border-primary">
              {t("contact.form.submit")}
            </ActionButton>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
