---
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="bg-blue-900 h-screen flex items-center text-white">
  <div class="flex-1">
    <div class="container max-w-[650px] ml-auto">
      <div class="max-w-[500px] mx-auto">
        <h2 class="whitespace-pre-line text-[45px] font-black uppercase mb-4">
          {t("about.title")}
        </h2>
        <p class="whitespace-pre-line text-justify mb-7">
          {t("about.content")}
        </p>
        <button class="h-10 px-4 border-2 border-white uppercase font-semibold">
          {t("about.button")}
        </button>
      </div>
    </div>
  </div>

  <div class="flex flex-1 h-full">
    <div
      class="flex-1 bg-white/25 h-full flex flex-col justify-end pl-[50px] pb-[86px]"
    >
      <a class="text-[24px] uppercase whitespace-pre-line mb-2 font-semibold">
        {t("about.history")}
      </a>
      <svg width="68" height="18" viewBox="0 0 68 18">
        <path
          d="M0 9H65.5M65.5 9L56.5 1.5M65.5 9L56.5 16.5"
          stroke="white"
          stroke-width="2"></path>
      </svg>
    </div>

    <div
      class="flex-1 bg-white/20 h-full flex flex-col justify-end pl-[50px] pb-[86px]"
    >
      <a class="text-[24px] uppercase whitespace-pre-line mb-2 font-semibold">
        {t("about.profile")}
      </a>
      <svg width="68" height="18" viewBox="0 0 68 18">
        <path
          d="M0 9H65.5M65.5 9L56.5 1.5M65.5 9L56.5 16.5"
          stroke="white"
          stroke-width="2"></path>
      </svg>
    </div>
  </div>
</section>
